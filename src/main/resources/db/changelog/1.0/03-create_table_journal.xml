<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="26.01.2022-1" author="vmurzakov">
        <createTable tableName="journal">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_journal"/>
            </column>
            <column name="USER_TELEGRAM_ID" type="BIGINT" remarks="id пользователя в telegram">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="CREATE_DATE" type="DATE" remarks="Дата когда был пушком"/>
        </createTable>
    </changeSet>

</databaseChangeLog>